<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>WiselyWheel</title>
    <style>
      /* CSS styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f2f2f2;
      }

      header {
        background-color: Dark Blue;
        color: #fff;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header img {
        width: 150px;
        height: auto;
      }

      nav ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
      }

      nav ul li {
        margin-right: 20px;
      }

      nav ul li a {
        text-decoration: none;
        color: #fff;
      }
      nav a {
        text-decoration: none;
        color: #fff;
        transition: color 0.3s ease;
      }

      nav a:hover {
        color: #ccc;
      }

      main {
        padding: 20px;
      }

      h3 {
        margin-bottom: 20px;
      }

      .filters {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 20px;
      }

      .filters button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-bottom: 2px solid transparent;
        margin-right: 10px;
        color: #333;
      }

      .filters button:hover {
        background-color: #ddd;
      }

      .filters button.active {
        border-bottom: 3px solid green;
        background-color: #f2f2f2;
      }

      .options-container {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
      }

      .option-group {
        display: none;
        width: 100%;
      }

      .option-group.active {
        display: flex;
      }

      .option {
        flex: 1 1 200px;
        margin-right: 10px;
        margin-bottom: 10px;
      }

      .option button {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: left;
        border: none;
        background-color: transparent;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
        align-items: center;
      }

      .option button:hover {
        background-color: #ddd;
      }

      .option button.active {
        background-color: lightgreen;
        color: white;
        text-decoration: underline;
      }

      .brand-img {
        width: 100px;
        height: auto;
        margin-right: 10px;
        transition: background-color 0.3s;
      }

      .bike-list {
        display: flex;
        flex-wrap: wrap;
      }

      .bike-item {
        flex: 0 0 calc(33.333% - 20px);
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: transform 0.3s;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .bike-item:hover {
        transform: translateY(-5px);
      }

      .bike-item img {
        width: 100%;
        height: auto;
        margin-bottom: 10px;
      }

      .bike-item h4 {
        margin: 0;
        margin-bottom: 5px;
        font-size: 18px;
      }

      .bike-item p {
        margin: 0;
        font-size: 16px;
        color: #666;
      }

      footer {
        background-color: Dark Blue;
        color: #fff;
        text-align: center;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

      footer p {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <header>
      <img
        src="/image/logo.png"
        alt="WiselyWheel"
        width="150mm"
        height="100mm"
      />
      <nav>
        <ul>
          <li><a href="/index">Home</a></li>
          <li><a href="/browse">Browse Bikes</a></li>
          <li><a href="/compare">Compare Bikes</a></li>
          <li><a href="/aboutus">About Us</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h3>Browse Bike By:</h3>

      <div class="filters">
        <button onclick="showBrand()" id="brandBtn" class="active">
          Brand
        </button>
        <button onclick="showPrice()" id="priceBtn">Price</button>
      </div>

      <div class="options-container">
        <div class="option-group brand-options active" id="brandOptions">
          <div class="option">
            <img
              src="/image/honda.png"
              alt="Honda"
              class="brand-img"
              onclick="loadBikesByBrand('Honda')"
            />
          </div>
          <div class="option">
            <img
              src="/image/yamaha.png"
              alt="Yamaha"
              class="brand-img"
              onclick="loadBikesByBrand('Yamaha')"
            />
          </div>
          <div class="option">
            <img
              src="/image/bajaj.png"
              alt="Bajaj"
              class="brand-img"
              onclick="loadBikesByBrand('Bajaj')"
            />
          </div>
          <div class="option">
            <img
              src="/image/tvs.webp"
              alt="TVS"
              class="brand-img"
              onclick="loadBikesByBrand('TVS')"
            />
          </div>
        </div>
        <div class="option-group price-options" id="priceOptions">
          <div class="option">
            <button onclick="filterByPrice(200001, 300000)">
              Under Rs 3 Lakh
            </button>
          </div>
          <div class="option">
            <button onclick="filterByPrice(300001, 400000)">
              Under Rs 4 Lakh
            </button>
          </div>

          <div class="option">
            <button onclick="filterByPrice(400001, 500000)">
              Under Rs 5 Lakh
            </button>
          </div>

          <div class="option">
            <button onclick="filterByPrice(500001, 600000)">
              Under Rs 6 Lakh
            </button>
          </div>
        </div>
      </div>

      <div class="bike-list" id="bikeList"></div>
    </main>

    <footer>
      <p>&copy; 2024 WiselyWheel. All rights reserved.</p>
    </footer>
    <script>
      // JavaScript code
      function showBrand() {
        const brandOptions = document.querySelector(".brand-options");
        const priceOptions = document.querySelector(".price-options");
        const brandBtn = document.getElementById("brandBtn");
        const priceBtn = document.getElementById("priceBtn");

        brandOptions.classList.add("active");
        priceOptions.classList.remove("active");
        brandBtn.classList.add("active");
        priceBtn.classList.remove("active");

        // Hide bike list
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
      }

      function showPrice() {
        const brandOptions = document.querySelector(".brand-options");
        const priceOptions = document.querySelector(".price-options");
        const brandBtn = document.getElementById("brandBtn");
        const priceBtn = document.getElementById("priceBtn");

        brandOptions.classList.remove("active");
        priceOptions.classList.add("active");
        brandBtn.classList.remove("active");
        priceBtn.classList.add("active");

        // Hide brand options
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
      }

      function loadBikesByBrand(brand) {
        fetch(`/api/bikefeatures/brand/${brand}`)
          .then((response) => response.json())
          .then(displayBikes)
          .catch((error) =>
            console.error("Error loading bikes by brand:", error)
          );
      }

      function filterByPrice(minPrice, maxPrice) {
        fetch(`/api/bikefeatures`)
          .then((response) => response.json())
          .then((bikes) => {
            const filteredBikes = bikes.filter(
              (bike) => bike.price >= minPrice && bike.price <= maxPrice
            );
            displayBikes(filteredBikes);
          })
          .catch((error) => console.error("Error fetching bikes:", error));
      }

      function displayBikes(bikes) {
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
        bikes.forEach((bike) => {
          const bikeItem = document.createElement("div");
          bikeItem.classList.add("bike-item");
          bikeItem.innerHTML = `
                <img src="${bike.url}" alt="${bike.variant_name}" />
                <h4>${bike.variant_name}</h4>
                <p>Price: Rs ${bike.price}</p>
            `;
          bikeItem.addEventListener("click", () => {
            // Redirect to bike details page
            window.location.href = `/bikeDetails?id=${bike._id}`;
          });
          bikeList.appendChild(bikeItem);
        });
      }

      // Initial load
      showBrand();
    </script>
  </body>
</html>
